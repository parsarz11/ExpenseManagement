@{
    ViewData["Title"] = "Expenses";
    int count = 1;
}
@model IEnumerable<ExpensesManagment.Web.Models.DisplayExpenseModel>

<a class="btn btn-outline-dark m-2" asp-controller="Expense" asp-action="AddExpense">Add Expense</a>
<br />
<div style="background-color:#edede9 ; border-radius:30px; width:1270px;" class="shadow">


    <div class="card-header" style="height: 43.888889px; border-top-left-radius:30px; border-top-right-radius:30px;">
        <h6 class="font-weight-bold text-primary">
            Last Five Expenses
        </h6>
    </div>


    <div style="padding: 0px 10px 0px 10px">
        <table class="table">
            <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col"></th>
            <th scope="col">Name</th>
            <th scope="col">Cost</th>
            <th scope="col">Time</th>
            <th scope="col">Category</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@count</td>
                <td>
                    <span style="
                height: 25px;
                width: 25px;
                background-color:@item.CategoryColor;
                border-radius: 50%;
                border:solid black 1px;
                display: inline-block;"></span>
                </td>
                <td>@item.Name</td>
                <td>@item.Cost</td>
                <td>@item.Date</td>
                <td>@item.Category</td>
                <td>
                    <div>
                        <button class="btn btn-danger">Delete</button>
                        <button class=" btn btn-primary">Edit</button>
                    </div>
                </td>
            </tr>
            count++;
        }  
    </tbody>
        </table>
    </div>
</div>